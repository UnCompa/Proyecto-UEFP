---
import MarkDownNav from './../components/MarkDownNav'
import { getLangFromUrl } from "../i18n/utils";
import SpeedInsights from "@vercel/speed-insights/astro";
const url = Astro.url;
const lang = getLangFromUrl(url)
const pathName = Astro.url.pathname;
const {frontmatter} = Astro.props
const {titulo,descripcion} = frontmatter
---

<!doctype html>
<html lang={lang} class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={""} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="canonical"
      href="https://unidad-educativa-fiscal-pichincha.vercel.app"
    />
    <slot name="opengraph" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <meta name="description" content={descripcion}>
    <title>{titulo}</title>
    <SpeedInsights />
  </head>
  <body class="bg-white dark:bg-zinc-950 h-full">
    <MarkDownNav client:load/>
    <main class="p-4 container w-full h-full mx-auto lg:w-1/2">
      <slot />
    </main>
  </body><style is:global>
    *::selection {
      background-color: #0af;
      color: #fafafa;
    }
    html {
      color-scheme: light dark;
      scrollbar-width: thin;
      scrollbar-color: #27272a white;
      font-family: "Kanit", sans-serif;
    }
    html.dark {
      scrollbar-width: thin;
      scrollbar-color: white #27272a;
      font-family: "Kanit", sans-serif;
    }
    input {
      border: none;
    }
    h1 {
      text-align: center;
      font-size: clamp(2em , 2vw + 1em, 3em);
      font-weight: bold;
      text-shadow: 0px 0px 10px #fff5;
      text-decoration: underline;
      padding: .5em 0em;
      @apply decoration-2 decoration-sky-500
    }
    h2,h3,h4,h5,h6 {
      text-align: start;
      
      font-weight: bold;
      text-shadow: 0px 0px 10px #fff5;
      text-decoration: underline;
      padding: .5em 0em;
      @apply decoration-2 decoration-sky-500
    }
    h2 {
      font-size: clamp(1.8em , 2vw + 1em, 2em);
    }
    h3 {
      font-size: clamp(1.5em , 2vw + 1em, 1.8em);
    }
    h4 {
      font-size: clamp(1.3em , 2vw + 1em, 1.5em);
    }
    h5 {
      font-size: clamp(1em , 2vw + 1em, 1.3em);
    }
    h6 {
      font-size: clamp(.8em , 2vw + 1em, 1em);
    }
    a {
      color: #0af;
      text-decoration: underline;
      text-shadow: 0px 0px 10px #0af5;
      @apply decoration-2 decoration-sky-500
    }
    strong {
      text-shadow: 0px 0px 10px #fff5;
    }
    code {
      background-color: #24292e;
      padding: .1em .3em;
      border-radius: 5px;
    }
    img {
      background-color: #0af;
      padding: .2em;
      margin: .5em 0em;
      width: 100%;
      max-height: max-content;
      object-fit: cover;
      display: flex;
      justify-content: center;
      align-items: center;
      box-shadow: 0px 0px 30px #0af9;
    }
    ul {
      list-style-type: disc;
      padding: 0em 1em;
    }
    pre {
      margin: 1em 0em;
      padding: .5em;
    }
  </style>
</html>
