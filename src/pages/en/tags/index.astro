---
import { getCollection } from "astro:content";
import BaseLayout from "../../../layouts/DocsLayout.astro";
const allPosts = await getCollection("dev");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const pageTitle = "√çndice de etiquetas";
---

<BaseLayout pageTitle={pageTitle}>
  <h1>Etiquetas</h1>
  <div class="flex flex-wrap gap-4">
    {
      tags.map((tag) => (
        <a
          href={`/es/tags/${tag}`}
          class="no-underline border-2 border-red-500 px-4 py-2 hover:bg-red-500 shadow-xl hover:shadow-red-500/30 transition-all"
        >
          <p transition:name={tag} class="capitalize">
            {tag}
          </p>
        </a>
      ))
    }
  </div>
</BaseLayout>
