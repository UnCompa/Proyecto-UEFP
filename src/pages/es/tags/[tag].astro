---
import { getCollection } from "astro:content";
import DocsLayout from "../../../layouts/DocsLayout.astro";
export const prerender = true;
export async function getStaticPaths() {
  const allPosts = await getCollection("dev");
  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.tags.includes(tag)
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<DocsLayout pageTitle={tag}>
  <h1 class="no-underline font-normal">
    Art√≠culos con la etiqueta: <span class="font-bold" transition:name={tag}>{tag}</span>
  </h1>
  <section class="grid md:grid-cols-1 lg:grid-cols-2 gap-2">
    {
      posts.map((post) => {
        (post);
        return (
          <div class="bg-zinc-900 p-2 h-max">
            
            <a
              class="font-Kanit font-light no-underline"
              href={`/es/docs/${post.slug}`}
            >
              <img src={post.data.image.url} class="object-cover h-56" transition:name={post.data.image.url}>
              <i class="text-xs text-zinc-500">{post.data.pubDate}</i>
              <h6 class="h-max no-underline">{post.data.title}</h6>
              <p class="text-sm">{post.data.description}</p>
            </a>
          </div>
        );
      })
    }
  </section>
</DocsLayout>
