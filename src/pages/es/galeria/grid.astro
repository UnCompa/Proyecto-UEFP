---
import Navigation from "../../../components/Fundamentales/Navigation.astro";
import Footer from "../../../components/Fundamentales/Footer.astro";
import Layout from "../../../layouts/Layout.astro";
import ViewImages from "../../../components/galeria/ViewImages.astro";
import { getLangFromUrl } from "../../../i18n/utils";
import { FaImage, FaTable } from "react-icons/fa";
const lang = getLangFromUrl(Astro.url)
---

<Layout title="Galeria | UEFP">
  <Navigation />
  <main class="h-full font-Rubik bg-gradient-to-tr from-slate-800 to-slate-900">
    <section class="flex justify-center">
      <h1 class="font-bold py-4 text-5xl lg:text-7xl">Galeria</h1>
    </section>
    <section class="container mx-auto px-8">
      <div class="grid grid-cols-2 gap-2">
        <a href={`/${lang}/galeria/grid`} class="w-full border rounded transition-all  text-white galery-button-active">
          <FaImage className="text-2xl mx-auto my-4"/>
        </a>
        <a href={`/${lang}/galeria/slider`} class="w-full border rounded transition-all text-white galery-button">
          <FaTable className="text-2xl mx-auto my-4"/>
        </a>
      </div>
    </section>
    <section class="container mx-auto">
      <h2 class="text-4xl md:text-6xl font-bold text-center font-Rubik pt-4 text-white">Anuario 2024!</h2>
      <ViewImages />
    </section>
  </main>
</Layout>
<Footer />
<style is:global>
  .galery-button-active {
    background-color: #f2f2f2;
    color: black
  }
  .galery-button:hover {
    background-color: #f2f2f2;
    color: black
  }
</style>