---
import { Button } from "@nextui-org/react";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import Layout from "../../layouts/Layout.astro";
import CardAcademics from "../../components/sections/CardAcademics.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import { FaUser } from "react-icons/fa6";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const url = Astro.url;
console.log(url);
console.log(lang);
---

<Layout title="Academicos" icon="/imgs/UEFPescudoblanco.png">
  <Navigation />
  <main class="grid-academics relative w-full h-full bg-zinc-100 dark:bg-zinc-800">
    <aside class="sticky top-4 h-max m-2 p-4 font-Kanit bg-zinc-200 rounded-xl dark:bg-zinc-900 shadow-2xl shadow-red-300/50 dark:shadow-red-800/30">
      <h2 class="text-3xl font-bold py-4">Niveles</h2>
      <ul class="flex flex-col gap-y-2">
        <li>
          <a href={`/${lang}/academics#1`} class="flex items-center justify-start gap-x-2">
        <FaUser/>
            <span>Nivel inicial</span>
        </a>
        </li>
        <li>
          <a href={`/${lang}/academics#2`} class="flex items-center justify-start gap-x-2">
        <FaUser/>
            <span>Nivel medio</span>
        </a>
        </li>
        <li>
          <a href={`/${lang}/academics#3`} class="flex items-center justify-start gap-x-2">
        <FaUser/>
            <span>Nivel superior</span>
        </a>
        </li>
        <li>
          <a href={`/${lang}/academics#4`} class="flex items-center justify-start gap-x-2">
        <FaUser/>
            <span>Nivel bachillerato</span>
        </a>
        </li>
      </ul>
    </aside>
    <div class="border-l-2 border-zinc-200/50 dark:border-zinc-950/50">
      <section class={`hero h-[85vh] w-full flex items-center`}>
        <div
          class="py-4 px-12 backdrop-blur flex flex-col sm:block container mx-auto dark:text-white text-white"
        >
          <h1
            class="animate-sink z-20 text-6xl md:text-9xl text-center sm:text-start font-Rubit font-bold"
          >
            {t("academics-title-hero")}
          </h1>
          <p
            class="font-Kanit text-base md:text-xl py-4 w-full md:w-2/3 text-center sm:text-start"
          >
            {t("academics-text-hero")}
          </p>
          <Button size="lg" color="primary">{t("academics-hero-button")}</Button
          >
        </div>
      </section>
      <section class="h-max bg-zinc-100 dark:bg-zinc-800 container mx-auto">
        <CardAcademics
          id="1"
          title={t("nivel-1-title")}
          img="/imgs/estudiantes.jpeg"
          content={t("nivel-1-text")}
          color="bg-cyan-500"
        />
        <CardAcademics
          id="2"
          title={t("nivel-2-title")}
          img="/imgs/estudiantes.jpeg"
          content={t("nivel-2-text")}
          color="bg-green-500"
        />
        <CardAcademics
          id="3"
          title={t("nivel-3-title")}
          img="/imgs/estudiantes.jpeg"
          content={t("nivel-3-text")}
          color="bg-red-500"
        />
        <CardAcademics
          id="4"
          title={t("nivel-4-title")}
          img="/imgs/estudiantes.jpeg"
          content={t("nivel-4-text")}
          color="bg-purple-500"
        />
      </section>
    </div>
  </main>
</Layout>
<Footer />

<style>
    html {
        scroll-behavior: smooth;
    }
  .hero {
    background: linear-gradient(45deg, rgba(0, 0, 0, 100), rgba(29, 29, 32, 0)),
      url("/imgs/study.jpg");
    background-repeat: no-repeat;
    background-size: cover;
  }
  .grid-academics {
    display: grid;
    grid-template-columns: 200px 1fr;
    scrollbar-color: #555;
    scrollbar-width: thin;
  }
  html > .grid-academics {
    color-scheme: light dark;
    scrollbar-width: thin;
    scrollbar-color: #27272a white;
  }
  html.dark > .grid-academics {
    scrollbar-width: thin;
    scrollbar-color: white #27272a;
  }
</style>
