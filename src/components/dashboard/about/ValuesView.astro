---
import { supabase } from "../../../lib/supabase";

const { data: dataValues } = await supabase
  .from("values_es")
  .select("*")
  .order("id", { ascending: true });
---
<section>
  <h2 class="text-3xl font-bold py-2" id="valores">
    Seccion Valores
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
  {dataValues?.map((item: any) => {
    return (
      <div class="bg-zinc-900 h-full rounded-lg p-2 font-Rubik flex flex-col lg:flex-row">
        <picture class="w-full md:w-max px-2 flex items-center justify-center">
          <img
            class="max-w-72 border-1 p-2 my-2 object-cover bg-black h-52 aspect-video"
            src={item.image}
            alt={item.label}
          />
        </picture>
        <hgroup class="p-2">
          <div class="flex flex-col gap-x-2">
            <h2 class="text-2xl font-bold">{item.label}</h2>
            <p class="font-light">{item.content}</p>
          </div>
        </hgroup>
      </div>
    );
  })}
  </div>
</section>