---
import CardImgReveal from "./CardImgReveal.astro";
interface Props {
  title: string;
  text: string;
  img: string;
  alt: string;
  invert?: boolean;
}
const { title, text, img, invert, alt } = Astro.props;
---

<div class="grid grid-cols-1 lg:grid-cols-2 container mx-auto font-Rubik p-4 md:p-12">
  {
    !invert ? (
      <>
        <div class="text-black dark:text-white border-l-4 p-4 border-red-300 dark:border-red-500">
          <div class="flex items-center justify-start gap-x-2 w-full pr-8 py-2">
            <slot />
            <h3 class="text-2xl md:text-4xl font-light title text-wrap w-full">{title}</h3>
          </div>
          <div class="h-0.5 w-1/2 bg-gradient-to-r  from-red-300 from-10% to-transparent dark:from-red-500 dark:to-yellow-500 rounded" />
          <p class="text-zinc-800 dark:text-zinc-300 py-2 md:text-lg lg:text-xl font-Rubik font-light">
            {text}
          </p>
        </div>
        <CardImgReveal img={img} alt={alt} />
      </>
    ) : (
      <>
        <CardImgReveal img={img} alt={alt} />
        <div class="text-black dark:text-white border-l-4 p-4 border-red-300 dark:border-red-500">
          <div class="flex items-center justify-start gap-x-2 w-max pr-8 py-2">
            <slot />
            <h3 class="text-2xl md:text-4xl font-light title text-pretty">{title}</h3>
          </div>
          <div class="h-0.5 w-1/2 bg-gradient-to-r  from-red-300 from-10% to-transparent dark:from-red-500 dark:to-yellow-500 rounded" />
          <p class="text-zinc-800 dark:text-zinc-300 py-2 md:text-lg lg:text-xl font-Rubik font-light">
            {text}
          </p>
        </div>
      </>
    )
  }
</div>
<script>
  import ScrollReveal from "scrollreveal";
  ScrollReveal().reveal(".title", {
    opacity: 0,
    origin: "top",
    distance: "30%",
    reset: false,
    duration: 500,
  });
</script>
